{
  "tasks": {
    "start": "deno run --watch --allow-all src/index.ts",
    "lint": "deno lint",
    "format": "deno fmt"
  },
  "fmt": {
    "lineWidth": 80,
    "indentWidth": 2,
    "useTabs": false,
    "semiColons": true,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "imports": {
    "@hono/zod-openapi": "npm:@hono/zod-openapi@^0.18.3",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@types/pg": "npm:@types/pg@^8.11.11",
    "drizzle-kit": "npm:drizzle-kit@^0.30.2",
    "drizzle-orm": "npm:drizzle-orm@^0.38.4",
    "drizzle-zod": "npm:drizzle-zod@0.5.1",
    "pg": "npm:pg@^8.13.1",
    "stoker": "npm:stoker@^1.4.2",
    "zod": "npm:zod@^3.24.1"
  }
}